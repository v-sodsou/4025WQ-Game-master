<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.Characters.CharacterReadPage"
             Title="Character Details">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update" Clicked="EditCharacter_Clicked" IconImageSource="icon_edit.png"/>
        <ToolbarItem Text="Delete"  Clicked="DeleteCharacter_Clicked" IconImageSource="icon_delete.png"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
       
        <StackLayout HorizontalOptions="Center">
            <Image
                Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"
                Source="{Binding Data.ImageURI}"
                Style="{StaticResource ImageMediumStyle}"
                VerticalOptions="CenterAndExpand"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="Name"/>
                <Label Text="{Binding Data.Name}"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Description"/>
                <Label Text="{Binding Data.Description}"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Level"/>
                <Label Text="Bla Bla Bla"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Experience"/>
                <Label Text="Bla Bla Bla"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Health"/>
                <Label Text="Bla Bla Bla"/>
            </StackLayout>
            
            <StackLayout Orientation="Horizontal">
                <Label Text="Attack"/>
                <Label Text="Bla Bla Bla"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Defense"/>
                <Label Text="Bla Bla Bla"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="Speed"/>
                <Label Text="Bla Bla Bla"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Button
                        Clicked="EditCharacter_Clicked"
                        Text="Update" />
                <Button
                        Clicked="DeleteCharacter_Clicked"
                        Text="Delete" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>