<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.Characters.CharacterDeletePage"
             Title="Delete Character">

    <ContentPage.Content>
        <StackLayout 
            HorizontalOptions="Center">
            <StackLayout Padding="0, 20, 0, 0" Orientation="Horizontal">
                <Label Text="Do you Really Want to Delete"/>
                <Label Text="{Binding Data.Name}"/>
                <Label Text="?"/>
            </StackLayout>
            <StackLayout Padding="0, 50, 0, 0" Orientation="Horizontal">
                <Image  WidthRequest="300" HeightRequest="300"
                    Source="{Binding Data.ImageURI}"
                    HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
            <StackLayout Padding="0, 50, 0, 0" HorizontalOptions="Center" Orientation="Horizontal">
                <Button 
                    Text="Delete" 
                    Clicked="CharacterDelete_Clicked" 
                    HorizontalOptions="Center"
                    FontSize="Medium"
                    BorderWidth="1" 
                    BorderColor="black">
                </Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>