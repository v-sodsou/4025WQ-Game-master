<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.NewRoundPage">

    <ContentPage.Content>
        <ScrollView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">

            <StackLayout VerticalOptions ="Center">

                <Label Text="Monsters you will fight in this round..." Style="{StaticResource CenterMessageStyle}"/>
                <Button Clicked="BeginButton_Clicked" Text="Begin Round"/>

                <StackLayout Orientation="Horizontal"  HorizontalOptions="Center">
                    <StackLayout Padding="25">
                        <Label Text="Characters" Style="{StaticResource MessageStyle}"/>
                        <StackLayout x:Name="PartyListFrame"/>
                    </StackLayout>

                    <StackLayout  Padding="25">
                        <Label Text="Monsters" Style="{StaticResource MessageStyle}"/>
                        <StackLayout x:Name="MonsterListFrame"/>
                    </StackLayout>
                  
                    <StackLayout Padding="1"></StackLayout>
                </StackLayout>

                <Button Clicked="BeginButton_Clicked" Text="Begin Round"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>